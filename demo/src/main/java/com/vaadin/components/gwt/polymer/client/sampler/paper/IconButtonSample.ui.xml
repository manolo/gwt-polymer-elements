<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:p='urn:import:com.vaadin.polymer.paper.widget'>

    <ui:style>

    </ui:style>

    <g:HTMLPanel addStyleNames="icon-button-sample">
        <style is="custom-style">

            .icon-button-sample .horizontal-section {
                min-width: 100px;
            }

            .icon-button-sample paper-icon-button {
                margin-left: 30px;
                display: block;
                width: 24px;
                text-align: center;
            }

            .icon-button-sample paper-icon-button.blue {
                color: var(--paper-light-blue-500);
            }

            .icon-button-sample paper-icon-button.red {
                color: var(--paper-red-500);
            }

            .icon-button-sample paper-icon-button.orange {
                color: var(--paper-orange-500);
            }

            .icon-button-sample paper-icon-button.green {
                color: var(--paper-green-500);
            }

            .icon-button-sample paper-icon-button.blue:hover {
                background: var(--paper-light-blue-50);
                border-radius: 50%;
            }

            .icon-button-sample paper-icon-button.red:hover {
                background: var(--paper-red-50);
                border-radius: 50%;
            }

            .icon-button-sample paper-icon-button.orange:hover {
                background: var(--paper-orange-50);
                border-radius: 50%;
            }

            .icon-button-sample paper-icon-button.green:hover {
                background: var(--paper-green-50);
                border-radius: 50%;
            }

            .icon-button-sample paper-icon-button.huge {
                margin-left: 0px;
                width: 100px;
                --paper-icon-button-ink-color: var(--paper-indigo-500);
            }

            .icon-button-sample paper-icon-button.huge::shadow #icon {
                width: 100px;
                height: 100px;
            }

            .icon-button-sample paper-icon-button.huge #icon {
                width: 100px;
                height: 100px;
            }
        </style>
        <div class="horizontal-section-container center-justified layout">
            <div>
                <h4>Enabled</h4>
                <div class="horizontal-section">
                    <p:PaperIconButton icon="menu" title="menu"></p:PaperIconButton>
                    <p:PaperIconButton icon="favorite" title="heart"></p:PaperIconButton>
                    <p:PaperIconButton icon="arrow-back" title="arrow-back"></p:PaperIconButton>
                    <p:PaperIconButton icon="arrow-forward" title="arrow-forward"></p:PaperIconButton>
                    <p:PaperIconButton icon="clear" title="clear"></p:PaperIconButton>
                    <p:PaperIconButton icon="polymer" title="polymer"></p:PaperIconButton>
                    <p:PaperIconButton src="https://assets-cdn.github.com/images/modules/logos_page/Octocat.png" ariaLabel="octocat" title="octocat"></p:PaperIconButton>
                </div>
            </div>

            <div>
                <h4>Disabled</h4>
                <div class="horizontal-section">
                    <p:PaperIconButton icon="menu" title="menu" disabled="true"></p:PaperIconButton>
                    <p:PaperIconButton icon="favorite" title="heart" disabled="true"></p:PaperIconButton>
                    <p:PaperIconButton icon="arrow-back" title="arrow-back" disabled="true"></p:PaperIconButton>
                    <p:PaperIconButton icon="arrow-forward" title="arrow-forward" disabled="true"></p:PaperIconButton>
                    <p:PaperIconButton icon="clear" title="clear" disabled="true"></p:PaperIconButton>
                    <p:PaperIconButton icon="polymer" title="polymer" disabled="true"></p:PaperIconButton>
                    <p:PaperIconButton src="https://assets-cdn.github.com/images/modules/logos_page/Octocat.png" ariaLabel="octocat" title="octocat" disabled="true"></p:PaperIconButton>
                </div>
            </div>

            <div>
                <h4>Color</h4>
                <div class="horizontal-section">
                    <p:PaperIconButton icon="menu" title="menu" addStyleNames="blue"></p:PaperIconButton>
                    <p:PaperIconButton icon="favorite" title="heart" addStyleNames="red"></p:PaperIconButton>
                    <p:PaperIconButton icon="arrow-back" title="arrow-back" addStyleNames="orange"></p:PaperIconButton>
                    <p:PaperIconButton icon="arrow-forward" title="arrow-forward" addStyleNames="green"></p:PaperIconButton>
                    <p:PaperIconButton icon="clear" title="clear" addStyleNames="blue"></p:PaperIconButton>
                    <p:PaperIconButton icon="polymer" title="polymer" addStyleNames="red"></p:PaperIconButton>
                    <p:PaperIconButton addStyleNames="blue" src="https://assets-cdn.github.com/images/modules/logos_page/Octocat.png" ariaLabel="octocat" title="octocat"></p:PaperIconButton>
                </div>
            </div>

            <div>
                <h4>Size</h4>
                <div class="horizontal-section">
                    <p:PaperIconButton icon="favorite" title="heart" addStyleNames="huge"></p:PaperIconButton>
                    <br/><br/><br/>
                    <p:PaperIconButton icon="polymer" title="polymer" addStyleNames="huge"></p:PaperIconButton>
                </div>
            </div>
        </div>

    </g:HTMLPanel>
</ui:UiBinder>
