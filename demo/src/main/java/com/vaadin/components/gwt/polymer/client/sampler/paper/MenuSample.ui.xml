<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:p='urn:import:com.vaadin.polymer.paper.widget'>

    <ui:style>
        @external .menu-sample, .horizontal-section;

        .menu-sample .horizontal-section {
            padding: 0 !important;
        }
    </ui:style>

    <g:HTMLPanel addStyleNames="menu-sample">

        <div class="horizontal-section-container center-justified layout">
            <div>
                <h4>Standard</h4>
                <div class="horizontal-section">
                    <p:PaperMenu addStyleNames="list">
                        <p:PaperItem>Inbox</p:PaperItem>
                        <p:PaperItem>Starred</p:PaperItem>
                        <p:PaperItem>Sent mail</p:PaperItem>
                        <p:PaperItem>Drafts</p:PaperItem>
                    </p:PaperMenu>
                </div>
            </div>

            <div>
                <h4>Pre-selected</h4>
                <div class="horizontal-section">
                    <p:PaperMenu addStyleNames="list" selected="0">
                        <p:PaperItem>Inbox</p:PaperItem>
                        <p:PaperItem disabled="true">Starred</p:PaperItem>
                        <p:PaperItem>Sent mail</p:PaperItem>
                        <p:PaperItem>Drafts</p:PaperItem>
                    </p:PaperMenu>
                </div>
            </div>

            <div>
                <h4>Multi-select</h4>
                <div class="horizontal-section">
                    <p:PaperMenu addStyleNames="list" multi="true">
                        <p:PaperItem>Bold</p:PaperItem>
                        <p:PaperItem>Italic</p:PaperItem>
                        <p:PaperItem>Underline</p:PaperItem>
                        <p:PaperItem>Strikethrough</p:PaperItem>
                    </p:PaperMenu>
                </div>
            </div>
        </div>

    </g:HTMLPanel>
</ui:UiBinder>
