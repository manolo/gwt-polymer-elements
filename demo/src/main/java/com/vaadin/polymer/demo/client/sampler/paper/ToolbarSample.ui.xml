<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:p='urn:import:com.vaadin.polymer.paper.widget'>

    <g:HTMLPanel addStyleNames="toolbar-sample">
        <style is="custom-style">
            .toolbar-sample paper-toolbar + paper-toolbar {
                margin-top: 20px;
            }
        </style>
        <p:PaperToolbar>
            <p:PaperIconButton icon="menu"/>
            <span class="title">Toolbar</span>
            <p:PaperIconButton icon="refresh"/>
            <p:PaperIconButton icon="add">+</p:PaperIconButton>
        </p:PaperToolbar>

        <p:PaperToolbar addStyleNames="tall">
            <p:PaperIconButton icon="menu"/>
            <span class="title">Toolbar: tall</span>
            <p:PaperIconButton icon="refresh"/>
            <p:PaperIconButton icon="add">+</p:PaperIconButton>
        </p:PaperToolbar>

        <p:PaperToolbar addStyleNames="tall">
            <p:PaperIconButton icon="menu" addStyleNames="bottom"/>
            <span class="bottom title">Toolbar: tall with elements pin to the bottom</span>
            <p:PaperIconButton icon="refresh" addStyleNames="bottom"/>
            <p:PaperIconButton icon="add" addStyleNames="bottom">+</p:PaperIconButton>
        </p:PaperToolbar>

        <p:PaperToolbar addStyleNames="medium-tall">
            <p:PaperIconButton icon="menu"/>
            <span class="flex"/>
            <p:PaperIconButton icon="refresh"/>
            <p:PaperIconButton icon="add">+</p:PaperIconButton>
            <span class="bottom title">Toolbar: medium-tall with label aligns to the bottom</span>
        </p:PaperToolbar>

        <p:PaperToolbar addStyleNames="tall">
            <p:PaperIconButton icon="menu"/>
            <div class="flex"/>
            <p:PaperIconButton icon="refresh"/>
            <p:PaperIconButton icon="add">+</p:PaperIconButton>
            <div class="middle title">label aligns to the middle</div>
            <div class="bottom title">some stuffs align to the bottom</div>
        </p:PaperToolbar>

        <p:PaperToolbar addStyleNames="tall">
            <p:PaperIconButton icon="menu"/>
            <div class="flex"/>
            <p:PaperIconButton icon="refresh"/>
            <p:PaperIconButton icon="add">+</p:PaperIconButton>
            <div class="middle title">element (e.g. progress) fits at the bottom of the toolbar</div>
            <div class="bottom flex" style="height: 20px; background-color: #0f9d58;"/>
        </p:PaperToolbar>
    </g:HTMLPanel>
</ui:UiBinder>