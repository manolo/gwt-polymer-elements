<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:p='urn:import:com.github.taras.gwt.polymer.client.widget'>
    
    <ui:style>
        .container {
            font-family: RobotoDraft, 'Helvetica Neue', Helvetica, Arial;
            margin: 0;
            padding: 24px;
        }

        .toolbar {
            color: #f1f1f1;
            fill: #f1f1f1;
        }

        .first {
            background: #4285f4;
        }

        .second {
            background: #3f51b5;
        }

        .third {
            background: #0f9d58;
        }

        .fourth {
            background: #ffeb3b;
            color: #333;
            fill: #333;
        }

        .fifth {
            background: #ff5722;
        }

        .sixth {
            background: #9c27b0;
        }
    </ui:style>
    
    <g:HTMLPanel addStyleNames="{style.container}">
        <hr />
        <h2>Toolbar</h2>
        
        <p:CoreToolbar addStyleNames="{style.toolbar} {style.first}">
            <paper-icon-button icon="menu"/>
            <span flex="">Title</span>
            <paper-icon-button icon="refresh"/>
            <paper-icon-button icon="more-vert"/>
        </p:CoreToolbar>

        <br />

        <p:CoreToolbar addStyleNames="{style.toolbar} {style.second}">
            <paper-icon-button icon="menu"/>
            <span flex="">Title</span>
            <paper-icon-button icon="refresh"/>
            <paper-icon-button icon="more-vert"/>
        </p:CoreToolbar>

        <br />

        <p:CoreToolbar addStyleNames="{style.toolbar} {style.third} tall">
            <paper-icon-button icon="menu"/>
            <span flex="">Title</span>
            <paper-icon-button icon="refresh"/>
            <paper-icon-button icon="more-vert"/>
        </p:CoreToolbar>

        <br />

        <p:CoreToolbar addStyleNames="{style.toolbar} {style.fourth} tall">
            <paper-icon-button icon="menu" class="bottom"/>
            <span flex="" class="bottom">Title</span>
            <paper-icon-button icon="refresh" class="bottom"/>
            <paper-icon-button icon="more-vert" class="bottom"/>
        </p:CoreToolbar>

        <br />

        <p:CoreToolbar addStyleNames="{style.toolbar} {style.fifth} medium-tall">
            <paper-icon-button icon="menu"/>
            <span flex=""/>
            <paper-icon-button icon="refresh"/>
            <paper-icon-button icon="more-vert"/>
            <span class="bottom indent">Title</span>
        </p:CoreToolbar>

        <br />

        <p:CoreToolbar addStyleNames="{style.toolbar} {style.sixth} tall">
            <paper-icon-button icon="menu"/>
            <div flex=""/>
            <paper-icon-button icon="refresh"/>
            <paper-icon-button icon="more-vert"/>
            <div flex="" class="middle indent">Title</div>
            <div flex="" class="bottom indent" style="font-size: 18px;">Title2</div>
        </p:CoreToolbar>

        <p:CoreMediaQuery debugId="mediaQuery" query="max-width: 800px"/>
    </g:HTMLPanel>
</ui:UiBinder>