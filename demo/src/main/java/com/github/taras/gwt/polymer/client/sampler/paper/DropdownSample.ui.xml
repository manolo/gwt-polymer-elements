<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:p='urn:import:com.github.taras.gwt.polymer.client.widget'>
    
    <ui:style>
        .container {
            font-family: RobotoDraft, 'Helvetica Neue', Helvetica, Arial;
            font-size: 14px;
            margin: 0;
            padding: 24px;
            -webkit-tap-highlight-color: rgba(0,0,0,0);
            -webkit-touch-callout: none;
        }

        .container section {
            padding: 20px 0;
        }

        .container section > div {
            padding: 14px;
            font-size: 16px;
        }

        .container x-trigger {
            z-index: auto;
        }

        .container paper-dropdown:not(.no-padding)::shadow #scroller {
            box-sizing: border-box;
            padding: 8px;
        }

        .with-margin {
            margin: 12px;
        }

        .open-below {
            top: 38px;
        }
    </ui:style>
    
    <g:HTMLPanel>

        <section>

            <div>Absolutely positioned dropdowns</div>

            <x-trigger icon="menu">
                <p:PaperDropdown>
                    halign = left
                    <br/>
                    valign = top
                </p:PaperDropdown>
            </x-trigger>

            <x-trigger icon="menu">
                <paper-dropdown valign="bottom">
                    halign = left
                    <br/>
                    valign = bottom
                </paper-dropdown>
            </x-trigger>

            <x-trigger icon="menu">
                <paper-dropdown halign="right">
                    halign = right
                    <br/>
                    valign = top
                </paper-dropdown>
            </x-trigger>

            <x-trigger icon="menu">
                <paper-dropdown class="no-padding">
                    <div class="menu">
                        <paper-item>Item 1</paper-item>
                        <paper-item>Item 2</paper-item>
                        <paper-item>Item 3</paper-item>
                    </div>
                </paper-dropdown>
            </x-trigger>

        </section>
    </g:HTMLPanel>
</ui:UiBinder>