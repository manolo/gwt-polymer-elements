<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:p='urn:import:com.github.taras.gwt.polymer.client.widget'>

    <ui:style>
        .container {
            font-family: RobotoDraft, 'Helvetica Neue', Helvetica, Arial;
            font-size: 14px;
            margin: 0;
            padding: 24px;
            -webkit-tap-highlight-color: rgba(0,0,0,0);
            -webkit-touch-callout: none;
        }

        .container section {
            padding: 20px 0;
        }

        .container section > div {
            padding: 14px;
            font-size: 16px;
        }

        .container paper-fab {
            color: #fff;
            margin-right:2em;
        }

        .container paper-fab.blue {
            background: #5677fc;
        }

        .container paper-fab.green {
            background: #259b24;
        }

        .container paper-fab.yellow {
            background: #ffeb3b;
        }
    </ui:style>

    <g:HTMLPanel addStyleNames="{style.container}">
        <hr />
        <h2>Floating Action Button</h2>

        <section>

            <div>Regular</div>

            <p:PaperFab icon="arrow-forward" title="arrow-forward"/>
            <p:PaperFab icon="create" addStyleNames="{style.blue}" title="create"/>

        </section>

        <section>

            <div>Mini</div>

            <p:PaperFab mini="" icon="done" addStyleNames="{style.green}" title="done"/>
            <p:PaperFab mini="" icon="reply" addStyleNames="{style.yellow}" title="reply"/>

        </section>
    </g:HTMLPanel>
</ui:UiBinder>